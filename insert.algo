PROCEDURE insertion_sort(VAR arr : ARRAY_OF INTEGER)
VAR
    i,j,curr : INTEGER;
BEGIN
    FOR i FROM 1 TO arr.length-1 DO
        current := arr [i];
        j := i-1;
        REPEAT
            arr[j+1] := arr[j];
            j := j-1;        
        UNTIL (j < 0 AND arr[j] < curr)
        arr[j+1] = curr;
    END_FOR
END